<h3 class="title">体重記録</h3>

<%= line_chart @measurements.pluck(:date, :weight) %>

<div class="container">
<%= form_with model: @measurement, local: true do |f| %>

 
 
 <div class="form-group item row">
   <label class="col-sm-1">体重</label>
   <div class="col-sm-3">
    <%= f.number_field :weight, class: "form-control" %>
   </div>
   <%= f.submit "登録", class: "btn btn-primary item col-sm-1"%>
 </div>
 

<% end %>
</div>


