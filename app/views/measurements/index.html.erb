<h1 class="title">体重記録</h1>

<%= line_chart @measurements.pluck(:date, :weight) %>

<div class="container">
<%= form_with model: @measurement, local: true do |f| %>

 <div class="form-with item">
   <label>日付</label>
   <%= f.date_field :date, class: "form-control" %>
 </div>
 
 <div class="form-with item">
   <label>体重</label>
   <%= f.number_field :weight, class: "form-control" %>
 </div>
 
  <%= f.submit "登録", class: "btn btn-primary item"%>
  
<% end %>
</div>


