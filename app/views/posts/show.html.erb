<h3 class="title">投稿一覧</h3>
<table class="table">
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td style="width: 10%">
          <% if post.user.avatar? %>
            <%= image_tag post.user.avatar.url %>
          <% else %>
            <%= image_tag "default.jpg", :size => '100x100'%>
          <% end %>
        </td>
        <td style="width: 90%">
          <%= raw h(post.text).gsub(/\R/, '<br>') %>
          <%= link_to "削除", post_path(post), method: :delete, data: { confirm: '削除しますか？' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
