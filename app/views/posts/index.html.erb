<h3 class="title">投稿</h3>

<%= form_with model: @post, local: true do |f| %>
 <div class="form_with">
   <%= f.text_area :text, class: "form_control", size: "40x5" %>
 </div>
 
 <%= f.submit "投稿", class: "btn btn-primary"%>
<% end %>

<table class="table">
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td style="width: 10%">
          <% if post.user.avatar? %>
            <%= image_tag post.user.avatar.url %>
          <% else %>
            <%= image_tag "default.jpg", :size => '100x100'%>
          <% end %>
        </td>
        <td style="width: 90%"><%= raw h(post.text).gsub(/\R/, '<br>') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
