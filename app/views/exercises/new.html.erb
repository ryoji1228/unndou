<div class="card">
  <div class="card-body">
    <%= form_with method: "get", local: true do |f| %>
      <div class="form-row">
          <div class="col">
              <%= f.number_field "name", placeholder: "入力", class: "form-control" %>
          </div>
              <%= f.submit "検索", class: "btn btn-primary" %>
          </div>
      </div>
    <% end %>
  </div>
</div>